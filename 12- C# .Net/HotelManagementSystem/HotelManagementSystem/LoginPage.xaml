<Window x:Class="HotelManagementSystem.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManagementSystem"
        mc:Ignorable="d"
        Title="LoginPage" Height="500" Width="500">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Center" Margin="0,366,0,0" VerticalAlignment="Top" Width="150" Height="35" Click="btnLogin_Click" Background="Black" Foreground="#FFFFFEFE"/>
        <TextBox x:Name="txtUserName" TextWrapping="Wrap" Width="200" Margin="0,217,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Height="25"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="150,265,0,0" VerticalAlignment="Top"/>
        <Label Content="User name" HorizontalAlignment="Left" Margin="150,186,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" Width="200"  Margin="0,296,0,0" Height="25" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Grid>
</Window>
