@using day1tasks
<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body>
    <div>
        <form method="post">
            <label for="name">Name: </label>
            <input type="text" name="name" />
            <label for="BD">BirthDay: </label>
            <input type="date" name="BD" />
            <input type="checkbox" name="grad" value="isGraduated" />
            <input type="submit" value="Go" />
        </form>
    </div>
    @{
        //Request.QueryString[""] ==> get
        //@Request["name"] ==> cookies > form > querystring
        if (IsPost)
        {
            <h1 style="color:red;">hello @Request.Form["name"]</h1>
            <h1 style="color:blue;">your birthday is @Request.Form["BD"]</h1>
            if (@Request.Form["grad"] == "isGraduated")
            {
                <h1> yessss, I am graduated</h1>
            }
            else
            {
                <h1>No still trying</h1>
            }
        }
    }



    @{
        List<Product> products = new List<Product>()
{
            new Product(){Name="p1" , Id=1 , Price=1 },
            new Product(){Name="p2" , Id=11 , Price=2 },
            new Product(){Name="p3" , Id=111 , Price=3 },
            new Product(){Name="p4" , Id=1111 , Price=4 },
            new Product(){Name="p5" , Id=11111 , Price=5 },
        };
    }

    @{
        WebGrid grid = new WebGrid(products);
    }

    @grid.GetHtml();

    
 
</body>
</html>

