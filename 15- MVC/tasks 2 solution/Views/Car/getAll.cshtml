
@using Carstask.Models;
@{
    ViewBag.Title = "getAll";
    List<Car> cars = ViewBag.myCars;
}

<h2>getAll</h2>

<div>
    <table>
        <tr>
            <th>Num</th>
            <th>Color</th>
            <th>Model</th>
            <th>Manfacture</th>
            <th> &nbsp; </th>
            <th> &nbsp; </th>
            <th> &nbsp; </th>
        </tr>

        @foreach (var item in cars)
        {
            <tr>
                <td> @item.Num </td>
                <td> @item.Color </td>
                <td> @item.Model </td>
                <td> @item.Manfacture </td>
                <td> <a href="/Car/getById/@item.Num"> Select Car </a> </td>
                <td> <a href="/Car/Edit/@item.Num"> Edit Car </a> </td>
                <td> <a href="/Car/delete/@item.Num"> Delete Car </a> </td>
            </tr>
        }

    </table>

    <a href="/Car/Create"> Add new car</a>
</div>